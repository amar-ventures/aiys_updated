<!DOCTYPE html>
<html lang="en">
<head>
   <!-- Core Meta Tags -->
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   
   <!-- Essential SEO Meta Tags -->
   <title>{% if meta_title %}{{ meta_title }} | {% endif %}Adishesha Institute Of Yogic Sciences | Yoga Teacher Training Kerala</title>
   <meta name="description" content="{% if meta_description %}{{ meta_description }}{% else %}Premier yoga teacher training in Kerala, India. AYUSH-certified courses offering authentic traditional yoga with modern teaching methods. Join our 200-hour and 300-hour yoga certification programs.{% endif %}">
   <meta name="keywords" content="{% if meta_keywords %}{{ meta_keywords }}{% else %}yoga teacher training, yoga certification, Kerala yoga school, traditional yoga, AYUSH certified yoga, 200 hour TTC, 300 hour TTC, yoga courses India, yoga philosophy, hatha yoga, ashtanga yoga, yoga alliance certification, meditation teacher, pranayama, yoga asanas{% endif %}">
   <meta name="author" content="Adishesha Institute Of Yogic Sciences">
   
   <!-- Search Engine Directives -->
   <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1, noodp, noydir">
   <meta name="googlebot" content="index, follow">
   <meta name="bingbot" content="index, follow">
   <meta name="revisit-after" content="7 days">
   <meta name="rating" content="general">
   <link rel="canonical" href="https://adisheshainstitute.com{% if page.url %}{{ page.url }}{% else %}/{% endif %}">
   
   <!-- Social Media Meta Tags -->
   <!-- Open Graph / Facebook -->
   <meta property="og:type" content="{% if page.url and page.url.includes('/blog/') %}article{% else %}website{% endif %}">
   <meta property="og:site_name" content="Adishesha Institute Of Yogic Sciences">
   <meta property="og:url" content="https://adisheshainstitute.com{% if page.url %}{{ page.url }}{% else %}/{% endif %}">
   <meta property="og:title" content="{% if meta_title %}{{ meta_title }} | {% endif %}Adishesha Institute Of Yogic Sciences">
   <meta property="og:description" content="{% if meta_description %}{{ meta_description }}{% else %}Premier yoga teacher training in Kerala, India. AYUSH-certified courses offering authentic traditional yoga with modern teaching methods.{% endif %}">
   <meta property="og:image" content="https://adisheshainstitute.com/assets/images/{% if og_image %}{{ og_image }}{% else %}adishesha-share-image.jpg{% endif %}">
   <meta property="og:image:alt" content="Adishesha Institute Of Yogic Sciences - Yoga Teacher Training">
   <meta property="og:image:width" content="1200">
   <meta property="og:image:height" content="630">
   <meta property="og:locale" content="en_US">
   
   <!-- Twitter -->
   <meta property="twitter:card" content="summary_large_image">
   <meta property="twitter:url" content="https://adisheshainstitute.com{% if page.url %}{{ page.url }}{% else %}/{% endif %}">
   <meta property="twitter:title" content="{% if meta_title %}{{ meta_title }} | {% endif %}Adishesha Institute Of Yogic Sciences">
   <meta property="twitter:description" content="{% if meta_description %}{{ meta_description }}{% else %}Premier yoga teacher training in Kerala, India. AYUSH-certified courses offering authentic traditional yoga with modern teaching methods.{% endif %}">
   <meta property="twitter:image" content="https://adisheshainstitute.com/assets/images/{% if twitter_image %}{{ twitter_image }}{% else %}adishesha-share-image.jpg{% endif %}">
   <meta name="twitter:site" content="@adisheshayoga">
   <meta name="twitter:creator" content="@adisheshayoga">
   
<!-- Favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="{{ assetsPath }}assets/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="{{ assetsPath }}assets/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="{{ assetsPath }}assets/favicon/favicon-16x16.png">
<link rel="manifest" href="{{ assetsPath }}assets/favicon/site.webmanifest">
<link rel="shortcut icon" href="{{ assetsPath }}assets/favicon/favicon.ico">
<meta name="msapplication-TileColor" content="#4A8F49">
<meta name="theme-color" content="#ffffff">
<link rel="icon" type="image/png" sizes="192x192" href="{{ assetsPath }}assets/favicon/android-chrome-192x192.png">
<link rel="icon" type="image/png" sizes="512x512" href="{{ assetsPath }}assets/favicon/android-chrome-512x512.png">
   
   <!-- Preload Critical Assets -->
   <link rel="preload" href="{{ assetsPath }}assets/images/logo.png" as="image" fetchpriority="high">
   <link rel="preload" href="{{ assetsPath }}assets/css/custom-fonts.css" as="style">
   
   <!-- Alternate Languages -->
   <link rel="alternate" href="https://adisheshainstitute.com{% if page.url %}{{ page.url }}{% else %}/{% endif %}" hreflang="en">
   <link rel="alternate" href="https://adisheshainstitute.com{% if page.url %}{{ page.url }}{% else %}/{% endif %}" hreflang="x-default">
   
   <!-- Geo Meta Tags -->
   <meta name="geo.position" content="11.6854; 75.7033">
   <meta name="geo.placename" content="Kuttiadi, Kerala, India">
   <meta name="geo.region" content="IN-KL">

   <!-- Mobile Specific -->
   <meta name="format-detection" content="telephone=no">
   <meta name="apple-mobile-web-app-capable" content="yes">
   <meta name="apple-mobile-web-app-status-bar-style" content="default">
   <meta name="apple-mobile-web-app-title" content="Adishesha Yoga">
   
