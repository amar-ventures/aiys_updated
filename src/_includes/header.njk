     "potentialAction": {
       "@type": "SearchAction",
       "target": "https://adisheshainstitute.com/search?q={search_term_string}",
       "query-input": "required name=search_term_string"
     }
   }
   </script>

   <!-- Breadcrumb Schema for SEO -->
   {% if page.url and page.url != "/" %}
   <script type="application/ld+json">
   {
     "@context": "https://schema.org",
     "@type": "BreadcrumbList",
     "itemListElement": [
       {
         "@type": "ListItem",
         "position": 1,
         "item": {
           "@id": "https://adisheshainstitute.com/",
           "name": "Home"
         }
       },
       {
         "@type": "ListItem",
         "position": 2,
         "item": {
           "@id": "https://adisheshainstitute.com{{ page.url }}",
           "name": "{{ meta_title or page.url | replace('/', '') | capitalize }}"
         }
       }
     ]
   }
   </script>
   {% endif %}
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="{{ assetsPath }}assets/css/animate.min.css">
    <script src="{{assetsPath}}assets/js/main.js"></script>
    <!-- Local Fonts (replacing Google Fonts) -->
    <link rel="stylesheet" href="{{ assetsPath }}assets/css/custom-fonts.css">
    <!-- Local Font Awesome (replacing CDN) -->
    <link rel="stylesheet" href="{{ assetsPath }}assets/css/fontawesome.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            light: '#8BBB8A',
                            DEFAULT: '#4A8F49',
                            dark: '#3A703A'
                        },
                        secondary: {
                            light: '#FFBC80',
                            DEFAULT: '#F5832A',
                            dark: '#D16716'
                        }
                    },
                    fontFamily: {
                        serif: ['Cormorant Garamond', 'serif'],
                        'playfair': ['Playfair Display', 'serif'],
                        sans: ['Poppins', 'sans-serif'],
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-10px)' },
                        }
                    },
                }
            }
        }
    </script>
    <style>
        .bg-gradient-spiritual {
            background: linear-gradient(135deg, 
                rgba(74, 143, 73, 0.85), /* Primary green */
                rgba(245, 131, 42, 0.75)  /* Secondary orange */
            );
        }
        .sanskrit-symbol {
            opacity: 0.15;
            filter: drop-shadow(0 0 15px rgba(245, 131, 42, 0.6));
        }
        /* Enhanced header style - using normal weight only */
        .institute-name {
            font-family: 'Playfair Display', serif;
            letter-spacing: 0.02em;
            font-weight: normal;
        }
        /* Better hamburger menu style with smaller size */
        .hamburger-line {
            display: block;
            width: 22px; /* Reduced from 25px */
            height: 2px; /* Reduced from 3px */
            margin: 4px 0; /* Reduced from 5px */
            transition: all 0.3s ease-in-out;
            background-color: #4A8F49;
        }
        /* Mobile menu styles */
        .mobile-menu {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            padding: 0.5rem 0;
        }
    </style>
</head>
