{% set assetsPath = "" %}
{% if page.url and page.url != "/" %}
  {% set assetsPath = "../" %}
{% endif %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adishesha Institute Of Yogic Sciences</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <script src="{{assetsPath}}assets/js/main.js"></script>
    <!-- Google Fonts - Using only normal weight Playfair Display -->
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Playfair+Display&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            light: '#8BBB8A',
                            DEFAULT: '#4A8F49',
                            dark: '#3A703A'
                        },
                        secondary: {
                            light: '#FFBC80',
                            DEFAULT: '#F5832A',
                            dark: '#D16716'
                        }
                    },
                    fontFamily: {
                        serif: ['Cormorant Garamond', 'serif'],
                        'playfair': ['Playfair Display', 'serif'],
                        sans: ['Poppins', 'sans-serif'],
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-10px)' },
                        }
                    },
                }
            }
        }
    </script>
    <style>
        .bg-gradient-spiritual {
            background: linear-gradient(135deg, 
                rgba(74, 143, 73, 0.85), /* Primary green */
                rgba(245, 131, 42, 0.75)  /* Secondary orange */
            );
        }
        .sanskrit-symbol {
            opacity: 0.15;
            filter: drop-shadow(0 0 15px rgba(245, 131, 42, 0.6));
        }
        /* Enhanced header style - using normal weight only */
        .institute-name {
            font-family: 'Playfair Display', serif;
            letter-spacing: 0.02em;
            font-weight: normal;
        }
        /* Better hamburger menu style with smaller size */
        .hamburger-line {
            display: block;
            width: 22px; /* Reduced from 25px */
            height: 2px; /* Reduced from 3px */
            margin: 4px 0; /* Reduced from 5px */
            transition: all 0.3s ease-in-out;
            background-color: #4A8F49;
        }
        /* Mobile menu styles */
        .mobile-menu {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            padding: 0.5rem 0;
        }
    </style>
</head>
<body class="font-sans text-gray-800">

    <!-- Header/Navigation -->
    <header class="fixed w-full z-50 bg-white bg-opacity-95 shadow-md">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <div class="flex items-center">
                <img src="{{ assetsPath }}assets/images/logo.png" alt="Adishesha Logo" class="h-11">
                <div class="ml-3">
                    <!-- Single span for institute name with reduced font size on mobile -->
                    <span class="text-sm md:text-xl font-playfair text-gray-900 institute-name md:whitespace-nowrap truncate block max-w-[210px] md:max-w-none">Adishesha Institute Of Yogic Sciences</span>
                </div>
            </div>
            
            <nav class="hidden lg:flex space-x-8">
                <a href="{% if page.url == '/' %}./{% else %}{{ assetsPath }}{% endif %}" class="text-gray-800 hover:text-primary py-2 transition-colors">Home</a>
                <a href="{{ assetsPath }}about/" class="text-gray-800 hover:text-primary py-2 transition-colors">About</a>
                <a href="{{ assetsPath }}courses/" class="text-gray-800 hover:text-primary py-2 transition-colors">Courses</a>
                <a href="{{ assetsPath }}faculty/" class="text-gray-800 hover:text-primary py-2 transition-colors">Faculty</a>
                <a href="{{ assetsPath }}gallery/" class="text-gray-800 hover:text-primary py-2 transition-colors">Gallery</a>
                <a href="{{ assetsPath }}contact/" class="text-gray-800 hover:text-primary py-2 transition-colors">Contact</a>
            </nav>
            
            <div class="flex items-center">
                <button class="bg-primary hover:bg-primary-dark text-white px-5 py-1.5 rounded-full shadow-md hidden md:block transition duration-300 text-sm">
                    Enroll Now
                </button>
                <!-- Smaller Hamburger Button -->
                <button id="mobile-menu-button" class="md:hidden flex flex-col justify-center rounded-md p-1.5 hover:bg-gray-100 transition-all">
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                </button>
            </div>
        </div>
    </header>

    <!-- Mobile menu with improved padding -->
    <div id="mobile-menu" class="lg:hidden hidden mobile-menu">
        <a href="{% if page.url == '/' %}./{% else %}{{ assetsPath }}{% endif %}" class="block px-8 py-4 text-gray-800 hover:bg-gray-100 hover:text-primary border-b border-gray-100 transition-colors">Home</a>
        <a href="{{ assetsPath }}about/" class="block px-8 py-4 text-gray-800 hover:bg-gray-100 hover:text-primary border-b border-gray-100 transition-colors">About</a>
        <a href="{{ assetsPath }}courses/" class="block px-8 py-4 text-gray-800 hover:bg-gray-100 hover:text-primary border-b border-gray-100 transition-colors">Courses</a>
        <a href="{{ assetsPath }}faculty/" class="block px-8 py-4 text-gray-800 hover:bg-gray-100 hover:text-primary border-b border-gray-100 transition-colors">Faculty</a>
        <a href="{{ assetsPath }}gallery/" class="block px-8 py-4 text-gray-800 hover:bg-gray-100 hover:text-primary border-b border-gray-100 transition-colors">Gallery</a>
        <a href="{{ assetsPath }}contact/" class="block px-8 py-4 text-gray-800 hover:bg-gray-100 hover:text-primary border-b border-gray-100 transition-colors">Contact</a>
        <div class="px-8 py-5">
            <button class="w-full bg-primary hover:bg-primary-dark text-white px-4 py-2 rounded-full shadow-md transition duration-300 text-sm">                Enroll Now </button>
        </div>
    </div>
    
    <!-- Updated JavaScript for mobile menu toggle -->
   
</body>
</html>