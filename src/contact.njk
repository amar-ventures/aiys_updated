<!-- Contact Form Section -->
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-['Cormorant_Garamond'] text-3xl font-medium text-gray-800 mb-6 text-center">
                Send Us a Message
            </h2>
            <div class="w-24 h-0.5 bg-gradient-to-r from-primary to-secondary mx-auto mb-8"></div>
            
            <form id="contact-form" action="https://api.sinspire.in/php-api/index.php" method="POST" class="space-y-6 max-w-3xl mx-auto">
                <!-- Hidden fields for FormSubmit.co configuration -->
                <input type="hidden" name="_subject" value="New contact form submission from Adishesha website">
                <input type="hidden" name="_template" value="table">
                <input type="hidden" name="_next" value="https://adishesha.com/thank-you">
                <input type="hidden" name="_captcha" value="true">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name <span class="text-red-500">*</span></label>
                        <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address <span class="text-red-500">*</span></label>
                        <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                        <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                    </div>
                    
                    <div>
                        <label for="interest" class="block text-sm font-medium text-gray-700 mb-1">I'm interested in</label>
                        <select id="interest" name="interest" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                            <option value="">Please select</option>
                            <option value="Teacher Training">Teacher Training</option>
                            <option value="Regular Classes">Regular Classes</option>
                            <option value="Workshops & Retreats">Workshops & Retreats</option>
                            <option value="Online Classes">Online Classes</option>
                            <option value="Personal Sessions">Personal Sessions</option>
                            <option value="Corporate Programs">Corporate Programs</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message <span class="text-red-500">*</span></label>
                    <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"></textarea>
                </div>
                
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="privacy" name="privacy" type="checkbox" required class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded">
                    </div>
                    <div class="ml-3">
                        <label for="privacy" class="text-sm text-gray-500">I agree to the <a href="/privacy-policy" class="text-primary hover:underline">privacy policy</a> and consent to being contacted regarding my inquiry</label>
                    </div>
                </div>
                
                <div class="text-center">
                    <button type="submit" class="inline-flex items-center bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-lg font-medium transition-colors">
                        Send Message
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>


